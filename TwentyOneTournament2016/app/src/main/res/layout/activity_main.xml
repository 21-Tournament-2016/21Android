<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regular Season"
        android:id="@+id/btn_loadSchedule"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="loadSchedule"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Standings"
        android:id="@+id/btn_standings"
        android:layout_above="@+id/btn_loadSchedule"
        android:layout_centerHorizontal="true"
        android:onClick="loadStandings"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart Schedule"
        android:id="@+id/btn_restart"
        android:layout_below="@+id/btn_loadSchedule"
        android:layout_centerHorizontal="true"
        android:onClick="restart"/>


    <TextView
        android:id="@+id/txt_tweets"
        android:text="Single-line text view that scrolls automatically if the text is too long to fit in the widget"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Tweet"
        android:id="@+id/btn_tweet"
        android:layout_below="@+id/btn_restart"
        android:layout_centerHorizontal="true"
        android:onClick="showTwitterDialog"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Playoffs"
        android:id="@+id/button"
        android:layout_below="@+id/btn_tweet"
        android:layout_centerHorizontal="true"
        android:onClick="startPlayoffs"/>

</RelativeLayout>
