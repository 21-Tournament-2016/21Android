<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Team Name"
        android:id="@+id/txt_opponent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txt_roundNumber"
        android:paddingStart="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="##"
        android:id="@+id/txt_roundNumber"
        android:layout_alignBottom="@+id/txt_opponent"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="##"
        android:id="@+id/txt_cupDifferential"
        android:layout_alignBottom="@+id/txt_opponent"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="W/L"
        android:id="@+id/txt_result"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/txt_cupDifferential"
        android:paddingEnd="15dp"/>

</RelativeLayout>